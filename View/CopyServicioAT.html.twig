{% extends 'Master/MenuBgTemplate.html.twig' %}

{% block body %}
    {% set works = fsc.model.getTrabajos() %}
    <div class="container-fluid">
        <div class="row">
            <div class="col">
                <h1 class="h3">
                    <i class="fa-solid fa-cut me-1"></i> {{ fsc.title }}
                </h1>
                <p>{{ trans('copy-p') }}</p>
                <form method="post" onsubmit="animateSpinner('add')">
                    {{ formToken() }}
                    <input type="hidden" name="action" value="save"/>
                    <input type="hidden" name="code" value="{{ fsc.modelCode }}"/>
                    <input type="hidden" name="model" value="{{ fsc.modelClass }}"/>
                    <div class="card shadow mb-4">
                        <div class="card-body">
                            <div class="row g-2">
                                <div class="col-sm-6 col-md-3 col-lg-2">
                                    {{ trans('date') }}
                                    <div class="mb-3">
                                        <input type="date" name="fecha" value="{{ "now" | date('Y-m-d') }}"
                                               class="form-control" required/>
                                    </div>
                                </div>
                                <div class="col-sm-6 col-md-3 col-lg-2">
                                    {{ trans('hour') }}
                                    <div class="mb-3">
                                        <input type="time" name="hora" value="{{ "now" | date('H:i:s') }}"
                                               class="form-control" required/>
                                    </div>
                                </div>
                                <div class="col-sm d-flex align-items-center">
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" name="copy-attachments"
                                               id="copyAttachments">
                                        <label class="form-check-label" for="copyAttachments">
                                            {{ trans('copy-attachments') }}
                                        </label>
                                    </div>
                                </div>
                                <div class="col-sm-12">
                                    {{ trans('description') }}
                                    <div class="mb-3">
                                        <textarea name="descripcion" class="form-control" rows="3"
                                                  required>{{ fsc.model.descripcion }}</textarea>
                                    </div>
                                </div>
                            </div>
                            {% if works is not empty %}
                                <div class="row">
                                    <div class="col-12 h4">
                                        {{ trans('works') }}
                                    </div>
                                </div>
                                {% for work in works %}
                                    <div class="row g-2 border-top pt-2">
                                        <div class="col-sm-2">
                                            {{ trans('start-date') }}
                                            <div class="mb-3">
                                                <input type="date" name="fechainicio[]"
                                                       value="{{ "now" | date('Y-m-d') }}"
                                                       class="form-control" required/>
                                            </div>
                                        </div>
                                        <div class="col-sm-2">
                                            {{ trans('start-hour') }}
                                            <div class="mb-3">
                                                <input type="time" name="horainicio[]"
                                                       value="{{ "now" | date('H:i:s') }}"
                                                       class="form-control" required/>
                                            </div>
                                        </div>
                                        {% if work.observaciones %}
                                            <div class="col-sm">
                                                {{ trans('observations') }}
                                                <div class="mb-3">{{ work.observaciones }}</div>
                                            </div>
                                        {% endif %}
                                    </div>
                                {% endfor %}
                            {% endif %}
                        </div>
                        <div class="card-footer">
                            <div class="d-flex justify-content-between">
                                <a href="{{ fsc.model.url() }}" class="btn btn-secondary">
                                    {{ trans('cancel') }}
                                </a>
                                <button type="submit" class="btn btn-spin-action btn-primary">
                                    <i class="fa-solid fa-save me-1"></i> {{ trans('save') }}
                                </button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
{% endblock %}