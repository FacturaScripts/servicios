<view>
    <columns>
        <group name="data" numcolumns="12">
            <column name="code" display="none" order="100">
                <widget type="text" fieldname="idtrabajo" />
            </column>
            <column name="service" numcolumns="2" order="110">
                <widget type="autocomplete" fieldname="idservicio" onclick="EditServicioAT">
                    <values source="serviciosat" fieldcode="idservicio" />
                </widget>
            </column>
            <column name="agent" titleurl="ListAgente" order="120">
                <widget type="select" fieldname="codagente" onclick="EditAgente">
                    <values source="agentes" fieldcode="codagente" fieldtitle="nombre" />
                </widget>
            </column>
            <column name="from-date" numcolumns="2" order="130">
                <widget type="date" fieldname="fechainicio" required="true" />
            </column>
            <column name="from-hour" numcolumns="2" order="140">
                <widget type="time" fieldname="horainicio" required="true" />
            </column>
            <column name="until-date" numcolumns="2" order="150">
                <widget type="date" fieldname="fechafin" />
            </column>
            <column name="until-hour" numcolumns="2" order="160">
                <widget type="time" fieldname="horafin" />
            </column>
        </group>
        <group name="work" numcolumns="12">
            <column name="reference" numcolumns="8" order="100">
                <widget type="autocomplete" fieldname="referencia">
                    <values source="Variante" fieldcode="referencia" />
                </widget>
            </column>
            <column name="quantity" numcolumns="4" order="110">
                <widget type="number" fieldname="cantidad" />
            </column>
        </group>
        <group name="notes" numcolumns="12">
            <column name="description" order="100">
                <widget type="textarea" fieldname="descripcion" />
            </column>
            <column name="observations" order="110">
                <widget type="textarea" fieldname="observaciones" />
            </column>
        </group>
    </columns>
</view>
